extends layout


block content

    style(type='text/css').
        .magic{
            padding:4px;
            display:inline-block;
            cursor:pointer;
            font:12px/14px Arial, Helvetica, sans-serif;
            color:#666;
            border:1px solid #999;
            background-color:#eee;
            -moz-border-radius:10px;
            -webkit-border-radius:10px;
            -moz-box-shadow:#999 2px 0px 3px;
            -webkit-box-shadow:#999 2px 0px 3px;
            margin-bottom:4px;
        }



    


    center

        block sidebar
            #result
        .widget
            h1 #{data.fName} #{data.lName} Account Information
            p
                | This is your account information.<br>
                | quick screen<br>            
           
            a(id="ImageLink" href="offsomewhere.htm") Edit My Account
            <br>
            <br>


        #accountDiv(class="magic" style="margin:0 auto;")

        button(id="bt_ok" type="button" class="magic" onclick="console.log('ok click');storeAccountInformation();") OK
        button(id="bt_cancel" type="button" class="magic" onclick="$( '#result' ).load( '/test2');") CANCEL
        
                       
                          


