script(type='text/javascript', src='/js/' + 'ajaxcomm.js')
script.
    var insertFileArea = function(){
        if (! $('#formArea').length){
            $( "body" ).append('<div id="formArea"><input type="file" id="file1" style="display:none" accept=".jpg, .png, .gif"><div>');
        }else{
            //cleanup prior stuff
            var control = $("#file1");
            control.replaceWith( control = control.clone());
        }

        $("#file1").change(function(e){
            var file = e.currentTarget.files[0];
            console.log("test:" + file.name);
            console.dir(e);
            //updateImgById('userImage', 'file1', e);
            uploadImageToServer('file1');
        });
        
        $( "#file1" ).trigger( "click" );
    }

    var updateImgById = function(inImgId, inLocalFile, inEvent){
        $('#' + inImgId).src = $('#' + inLocalFile).value;
        var tgt = inEvent.target || window.event.srcElement, files = tgt.files;
        var fr = new FileReader();
        fr.onload = function(ldEvent){
            console.log("onlod fr");
            $('#userImage').attr('src', ldEvent.target.result);
        }
        fr.readAsDataURL(files[0]);
    }

    var uploadImageToServer = function(inFileId){
        var ajaxPostObject = new AjaxPostObject();

        ajaxPostObject.uploadFileAndData(inFileId,
            {
            
                'command':'imageStore',
                'theme':'normalUserImage'

            }, 
            function(inResponse){
                console.log("doUpload on finish!!!");
                console.dir(inResponse);
                console.log(JSON.parse(inResponse).fileName);
                $('#userImage').attr('src', location.protocol + "//" + location.host + JSON.parse(inResponse).domainFilePath);               
            }
        );
    }

    var convertPageDataToJson = function(){
        var fieldsHash = {};
       $(".userDataClass").each(function(){
            fieldsHash[this.name] = this.value;
       });

       return fieldsHash
    }


    var storeAccountInformation = function(){
        console.log('storeAccountInformation ENTERED');
        var ajxObj = new AjaxJsonPostObject(
            {
                url:'/user/service',
                onSuccess:function(inResponseText){
                    console.log("onSuccess:"+JSON.stringify(inResponseText));
                    //document.location.href = '/displayAccount';

                },
                onFail:function(inError, inStatusText){
                    console.log("onFail:"+inError+", "+JSON.stringify(inStatusText));
                }

            }
        );

        ajxObj.send(
            {
                command:'addNewUserAccountInformation',
                params:convertPageDataToJson(),
                imageDomainPath:$('#userImage').attr('src')
            }
        );
    }